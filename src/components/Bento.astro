import BentoType from "./BentoType.astro";
import BentoStats from "./BentoStats.astro";
import BentoInfo from "./BentoInfo.astro";
---

<section
  class="w-full max-w-[1400]px grid grid-cols-10 auto-rows-auto gap-4 p-6 md:p-12 lg:p-20 mx-auto"
>
