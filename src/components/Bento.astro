---
import BentoPokemon from "./BentoPokemon.astro";
import BentoType from "./BentoType.astro";
import BentoStats from "./BentoStats.astro";
import BentoInfo from "./BentoInfo.astro";
---

<section
  class="w-full max-w-[1400]px grid grid-cols-10 gap-4 p-6 md:p-12 lg:p-20 mx-auto bg-gray-950"
>
  <BentoPokemon
    class="col-span-10 md:col-span-3 md:row-start-1 md:row-end-3"
    title="Haunter"
    number="093"
  />
  <BentoType class="col-span-10 md:col-span-2 md:row-start-1 md:row-end-2" />
  <BentoStats
    class="col-span-10 md:col-span-5 md:row-start-1 md:row-end-2"
    height="1.6"
    weight="0.1"
    gender="both"
    category="Gas"
    ability="Levitation"
  />
  <BentoInfo class="col-span-10 md:col-span-7 md:row-start-2 md:row-end-3" />
</section>
